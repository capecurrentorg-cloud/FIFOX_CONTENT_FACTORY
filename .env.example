# FIFOX API Configuration
# Add your API keys here when you get them

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
FLASK_ENV=development
PORT=5000

# Database
DATABASE_URL=sqlite:///fifox.db

# CORS Configuration (comma-separated list)
CORS_ORIGINS=*

# Mock Mode (set to False to use real APIs)
USE_MOCK_DATA=True

# Toast POS API
TOAST_POS_API_KEY=your_toast_pos_api_key_here
TOAST_POS_API_URL=https://api.toasttab.com

# Vapi.ai Phone Agent API
VAPI_API_KEY=your_vapi_api_key_here
VAPI_API_URL=https://api.vapi.ai

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Social Media APIs
INSTAGRAM_TOKEN=your_instagram_token_here
FACEBOOK_TOKEN=your_facebook_token_here
TIKTOK_API_KEY=your_tiktok_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
SNAPCHAT_API_KEY=your_snapchat_api_key_here

# OpenAI (for DALL-E image generation and content)
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI (for Stable Diffusion)
STABILITY_API_KEY=your_stability_api_key_here

# Other optional services
REPLICATE_API_KEY=your_replicate_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Instructions:
# 1. Copy this file to .env and replace "your_*_here" with your actual API keys
# 2. Never commit the .env file to git with real API keys
# 3. Keep your API keys secure and private
# 4. Set USE_MOCK_DATA=False when you're ready to use real API integrations
